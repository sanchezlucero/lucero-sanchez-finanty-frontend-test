{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "rootDir": "./src",            
    "outDir": "./dist",          
    "strict": true,               
    "noImplicitAny": true,         
    "strictNullChecks": true,
    "noUnusedLocals": true,      
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "esModuleInterop": true,      
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],       
  "exclude": ["node_modules", "dist"]
}